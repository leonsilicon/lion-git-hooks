{
	"name": "lion-git-hooks",
	"version": "1.0.5",
	"description": "A fork of simple-git-hooks with additional features that fit my use case.",
	"license": "MIT",
	"repository": "leonzalion/lion-git-hooks",
	"bin": "./cli.js",
	"type": "module",
	"scripts": {
		"postinstall": "node ./bin/postinstall.js",
		"release": "lionp",
		"prepare": "pnpm start",
		"build": "node-ts ./scripts/build.ts",
		"start": "node-ts ./bin/cli.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "^1.0.62",
		"@types/is-ci": "^3.0.0",
		"@types/jest": "^27.0.3",
		"@types/node": "^17.0.0",
		"desm": "^1.2.0",
		"eslint": "^8.5.0",
		"execa": "^6.0.0",
		"jest": "^27.4.5",
		"lint-staged": "^12.1.3",
		"lion-system": "^1.0.9",
		"lionp": "^1.0.15",
		"prettier": "^2.5.1",
		"sync-index": "^1.0.11",
		"ts-jest": "^27.1.2",
		"ts-jest-resolver": "^2.0.0",
		"tsc-alias": "^1.5.0",
		"tsm": "^2.2.1",
		"type-fest": "^2.11.1",
		"typescript": "^4.5.4"
	},
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"lint-staged": {
		"*.{js,ts}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"dependencies": {
		"cosmiconfig": "^7.0.1",
		"find-up": "^6.2.0",
		"globby": "^13.1.0",
		"is-ci": "^3.0.1",
		"is-heroku": "^3.0.0",
		"map-obj": "^5.0.0",
		"minimist": "^1.2.5",
		"onetime": "^6.0.0",
		"pkg-dir": "^6.0.1"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
